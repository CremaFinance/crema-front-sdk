{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["node_modules/@types", "types"],
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./dist"
  },

  "include": ["./src"],
  "exclude": [
    "./dist",
    "./node_modules",
    "./cli",
    "./.yarn",
    "./.vscode",
    "./types"
  ]
}
