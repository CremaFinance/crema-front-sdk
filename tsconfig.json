{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": [
      "node_modules/@types",
      "types"
    ],
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./dist/cjs"
  },
  "include": [
    "./src",
    "./cli"
  ],
  "exclude": [
    "./dist",
    "./node_modules",
    "./.yarn",
    "./.vscode",
    "./types"
  ]
}
